<div id="home" class="section">
  <h1>Chad Kreutzer</h1>
</div>
<div id="home-body">
  <div>
  <h3>About Me</h3>
  <a class="fa-stack fa-3x" href="#about">
  <i class="fa fa-circle fa-stack-2x"></i>
  <i class="fa fa-user-o fa-stack-1x fa-inverse"></i>
</a>
</div>
<div>
  <h3>My Projects</h3>
  <a class="fa-stack fa-3x" href="#portfolio">
  <i class="fa fa-circle fa-stack-2x"></i>
  <i class="fa fa-code fa-stack-1x fa-inverse"></i>
</a>
</div>
<div>
  <h3>Contact Me</h3>
  <a class="fa-stack fa-3x" href="#contact">
  <i class="fa fa-circle fa-stack-2x"></i>
  <i class="fa fa-envelope-open-o fa-stack-1x fa-inverse"></i>
</a>
</div>
</div>

<div id="about" class="section">
  <div class="section-title">
    <i class="fa fa-user-o fa-4x"></i>
    <h2>My Story So Far</h2>
  </div>
</div>
<div id="about-body">
  <div id="about-text">
    {{md 'about_me'}}
  </div>
  <img id="pup-and-me" src="/images/eli_and_me.jpg" alt="My dog and me laying in the grass">
</div>

<div id="portfolio" class="section">
  <div class="section-title">
    <i class="fa fa-code fa-4x"></i>
    <h2>Things I Have Made</h2>
  </div>
</div>
<div id="portfolio-body">
  <ul id="projects">
    {{> projects}}
  </ul>
</div>

<div id="contact" class="section">
  <div class="section-title">
    <i class="fa fa-envelope-open-o fa-4x"></i>
    <h2>Ways to Reach Me</h2>
  </div>
</div>
<div id="contact-body">
  <div id="social">
    <a id="li" href="https://www.linkedin.com/in/chad-kreutzer-888a9b29"><i class="fa fa-linkedin-square fa-4x"></i></a>
    <a id="gh" href="https://github.com/ChadKreutzer"><i class="fa fa-github fa-4x"></i></a>
    <a id="tw" href="https://twitter.com/chad_kreutzer"><i class="fa fa-twitter fa-4x"></i></a>
  </div>
  {{> contact_form}}
</div>

<div id="goodbye"></div>

{{#if anchor}}
<script>
  window.onload = window.location.hash = '#{{anchor}}';
</script>
{{/if}}

