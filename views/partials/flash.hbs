{{#if flash}}
    <div class="flash {{flash.type}}">
        <button id="close">
            &times;
        </button>
        <alert>
            {{!--<strong>{{flash.intro}}</strong>--}}
            {{{flash.message}}}
        </alert>
    </div>
    <script src="javascripts/flash.js"></script>
{{/if}}
