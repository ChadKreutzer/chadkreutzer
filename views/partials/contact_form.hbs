{{> flash}}
<form action='/' id='contact_me' name='contact_me' method='post'>

  <label for='name'>Name</label>
  <input type="text" name='name' id='name' placeholder='Bob Smith' value="{{values.name}}" required>
  <div class='msg hidden'>{{errors.name.msg}}</div>

  <label for='email'>Email</label>
  <input type="email" name='email' id='email' placeholder='bob@example.com' value="{{values.email}}" required>
  <div class='msg hidden'>{{errors.email.msg}}</div>

  <label for='subject'>Subject</label>
  <input type="text" name='subject' id='subject' placeholder="I'm Messaging You About Stuff" value="{{values.subject}}" required>
  <div class='msg hidden'>{{errors.subject.msg}}</div>

  <label for='body'>Message</label>
  <textarea placeholder="This is the stuff about which I'm messaging you." name="body" id="body" rows="10" required>{{values.body}}</textarea>
  <div class='msg hidden'>{{errors.body.msg}}</div>

  <input id="submit" type="submit">
</form>
<script src="javascripts/contact.js"></script>